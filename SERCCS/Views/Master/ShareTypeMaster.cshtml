<form asp-controller="Master" asp-action="ShareTypeMaster" method="post">
    <div class="heading mt-4">
        Share Type Master
    </div>

    <div class="container mt-1" cellpadding="0" cellspacing="0" border="1">
        <div class="row mt-3 justify-content-md-center">
            <div class="col-md-8 col-lg-8 col-12 pl-5 divbox">
                <div class="row">

                    <div class="col-md-4 col-sm-12 col-12 mt-3">
                        Code:
                    </div>
                    <div class="col-md-8 col-sm-12 col-12 mt-3">
                        @Html.TextBoxFor(p => p.code, new { @class = "size"})
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-md-4 col-sm-12 col-12 mt-3">
                        Description:
                    </div>
                    <div class="col-md-8 col-sm-12 col-12 mt-3">
                        @Html.TextBoxFor(p => p.description, new { @class = "sizebig"})
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                        <input id="btnSave" type="button" name="btnSave" Height="40" Width="100" class="btn btn-primary btn-sm" value="SAVE" onclick="SaveData()" />
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12 col-12 text-center">
                        <input id="btnupdate" type="button" name="btnupdate" Height="40" Width="100" class="btn btn-primary btn-sm" value="UPDATE" onclick="UpdateData()" />
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12 col-12 text-center">
                        <input id="btnAddnew" type="button" name="btnAddnew" Height="40" Width="100" class="btn btn-primary btn-sm" value="AddNew" onclick="AddNew()" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                <div class="table-responsive mt-1">
                    <table id="list" class="tab">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div style="height:50px"></div>
</form>

@section scripts
{
    <script src="~/js/jquery-3.6.1.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            showTable();
            $('#btnupdate').hide();
            $('#btnAddnew').hide();
        });

        function SaveData() {
            if ($('#code').val() == null || $('#code').val() == "") {
                alert("Code cannot Be Blanked");
                $('#code').focus();
            }
            else if ($('#description').val() == null || $('#description').val() == "") {
                alert("Description Cannot be Blank");
                $('#description').focus();
            }
            else {
                        let ModelObject = {
                        code: $('#code').val(),
                        description: $('#description').val(),
                    };
                    /*alert(JSON.stringify(ModelObject));*/
                    $.ajax({
                        url: '@Url.Action("savedata", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            alert(data);
                            showTable();
                            $('#code').val("");
                            $('#description').val("");
                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });
                 }
        }

        function UpdateData() {
            if ($('#code').val() == null || $('#code').val() == "") {
                alert("Code cannot Be Blanked");
                $('#code').focus();
            }
            else if ($('#description').val() == null || $('#description').val() == "") {
                alert("Description Cannot be Blank");
                $('#description').focus();
            }
            else {
                     let ModelObject = {
                        code: $('#code').val(),
                        description: $('#description').val(),
                     };
                     $.ajax({
                        url: '@Url.Action("updatedata", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            alert(data);
                            showTable();                            
                            AddNew();
                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                     });
                 }
        }

        function showTable() {
            let ModelObject = {
                code: $('#code').val()
            };
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetAllDetails", "Master")',
                data: ModelObject,
                dataType: "json",
                success: function (data) {
                    document.getElementById("list").innerHTML = data;
                },
                error: function (err) {
                    //alert("Error Occured");
                }
            });
        }

        (function () {
            if (window.addEventListener) {
                window.addEventListener('load', run, false);
            }
            else if (window.attachEvent) {
                window.attachEvent('onload', run);
            }

            function run() {
                var t = document.getElementById('list');
                t.onclick = function (event) {
                    event = event || window.event;
                    var target = event.target || event.srcElement;
                    while (target && target.nodeName != 'TR') {
                        target = target.parentElement;
                    }

                    var cells = target.cells;
                    if (!cells.length || target.parentNode.nodeName == 'THEAD') {
                        return;
                    }
                    var f1 = document.getElementById('code');
                    var f2 = document.getElementById('description');

                    f1.value = cells[0].innerHTML;
                    f2.value = cells[1].innerHTML;
                    $('#btnupdate').show();
                    $('#btnAddnew').show();
                    $('#btnSave').hide();
                    document.getElementById('code').readOnly = true;
                };
            }
        })();

         function AddNew() {
            $('#btnupdate').hide();
            $('#btnSave').show();
            $('#btnAddnew').hide();
            document.getElementById('code').readOnly = false;
            $('#code').val("");
            $('#description').val("");
         }


    </script>
}


