<form asp-controller="Master" asp-action="AuMaster" method="post">
    <div class="heading mt-4">
        AU Master
    </div>

    <div class="container mt-1" cellpadding="0" cellspacing="0" border="1">
        <div class="row mt-3 justify-content-md-center">
            <div class="col-md-8 col-lg-8 col-12 pl-5 divbox">
                <div class="row">

                    <div class="col-md-4 col-sm-12 col-12 mt-3">
                        AU:
                    </div>
                    <div class="col-md-8 col-sm-12 col-12 mt-3">
                        @Html.TextBoxFor(p => p.au, new { @class = "size", @onkeypress = "javascript: return evtau(event);" })
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-md-4 col-sm-12 col-12 mt-3">
                        Name:
                    </div>
                    <div class="col-md-8 col-sm-12 col-12 mt-3">
                        @Html.TextBoxFor(p => p.name, new { @class = "sizebig", @onkeypress = "javascript: return evtname(event);" })
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                        <input id="btnSave" type="button" name="btnSave" Height="40" Width="100" class="btn btn-primary btn-sm" value="SAVE" onclick="SaveData()" />
                    </div>
                    @*<div class="col-lg-2 col-md-2 col-sm-12 col-12 text-center">
                        <input id="btnUpdate" type="button" name="btnUpdate" Height="40" Width="100" class="btn btn-primary btn-sm" value="UPDATE" onclick="UpdateData()" />
                    </div>*@
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                <div class="table-responsive mt-1">
                    <table id="AUList" class="tab">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div style="height:50px"></div>
</form>

@section scripts
{
    <script src="~/js/jquery-3.6.1.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#au').focus();
            ShowTable();
        });

        function SaveData() {
            if ($('#au').val() == null || $('#au').val() == "") {
                alert("AU cannot Be Blanked");
                $('#au').focus();
            }
            else if ($('#name').val() == null || $('#name').val() == "") {
                alert("Name Cannot be Blank");
                $('#name').focus();
            }
            else {
                    let ModelObject = {
                        au: $('#au').val(),
                        name: $('#name').val(),
                    };
                    /*alert(JSON.stringify(ModelObject));*/
                    $.ajax({
                        url: '@Url.Action("SaveAuMaster", "Master")',
                        type: "POST",
                        data: ModelObject,
                        dataType: "json",
                        success: function (data) {
                            alert(data);                            
                            $('#au').val("");
                            $('#name').val("");
                            $('#au').focus();
                            ShowTable();                                                       
                        },
                        error: function (err) {
                            alert("Error Occured");
                        }
                    });
                 }
        }

        function ShowTable() {
            /*let ModelObject = { caste_id: $('#caste_id').val()};*/
                    $.ajax({
                    type: "POST",
                         url: '@Url.Action("GeList", "Master")',
                        //data: ModelObject,
                        dataType: "json",
                    success: function (data) {
                        document.getElementById("AUList").innerHTML = data;
                    },
                     error: function (err) {
                    //alert("Error Occured");
                     }
                    });
        }

        function evtau(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if ((charCode < 106 || charCode > 95) && (charCode < 58 || charCode > 47) && charCode != 13 && charCode == 191 && charCode == 111 && (charCode < 65 || charCode > 90))
                return false;
            else if (charCode == 13) {
                $('#name').focus();
            }
        }

        function evtname(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if ((charCode < 106 || charCode > 95) && (charCode < 58 || charCode > 47) && charCode != 13 && charCode == 191 && charCode == 111 && (charCode < 65 || charCode > 90))
                return false;
            else if (charCode == 13) {
                $('#btnSave').focus();
            }
        }
    </script>
}

