@model SERCCS.Models.Views.loginViewModel
@{
    Layout = null;
    ViewBag.Title = "login";
    
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: linear-gradient(to right,#94BBE9, #EEAECA, #A7B8E2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-wrapper {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 400px;
        }

            .login-wrapper h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #333;
                font-weight: 600;
            }

        .form-label {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .form-control {
            border-radius: 8px;
            height: 45px;
        }

        .btn-login {
            background-color: #5a67d8;
            color: white;
            font-weight: 600;
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            margin-top: 15px;
        }

            .btn-login:hover {
                background-color: #434190;
            }

        .form-note {
            margin-top: 20px;
            font-size: 13px;
            color: #555;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="login-wrapper">
        <h2>Login</h2>

        <div class="mb-3">
            <label class="form-label">User ID</label>
            @Html.TextBoxFor(p => p.userId, new { @class = "form-control", @id = "userId", placeholder = "Enter User ID" })
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            @Html.PasswordFor(p => p.password, new { @class = "form-control", @id = "password", placeholder = "Enter Password", @onkeypress = "javascript: return evtpassword(event);" })
        </div>
        <button id="btnlogin" type="button" class="btn btn-login" onclick="Login()">Login</button>
        <div class="form-note">
            Don't have an account? <a href="#">Register</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

        function Login() {
            let ModelObject = {
                userId: $('#userId').val(),
                password: $('#password').val()
            };

            $.ajax({
                url: '@Url.Action("GetLogin", "Auth")',
                type: "POST",
                data: ModelObject,
                dataType: "json",
                success: function (data) {
                    if (data.msg === "Success") {
                        window.location.href = "@Url.Action("Index", "Home")";
                    } else {
                        alert(data.msg);
                    }
                },
                error: function () {
                    alert("Error occurred.");
                }
            });
        }

        function evtpassword(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if ((charCode < 106 || charCode > 95) && (charCode < 58 || charCode > 47) && charCode != 13 && charCode == 191 && charCode == 111 && (charCode < 65 || charCode > 90))
                return false;
            else if (charCode == 13) {
                Login();
            }
        }

    </script>
</body>
</html>
